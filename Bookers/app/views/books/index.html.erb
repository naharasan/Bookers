<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

  </tbody>
</table>
<h2>New book</h2>

<form class="new_book" action="/books" method="post">
 <%= form_with model:@book,local:true do |f| %>

 <div class ="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
 </div>

 <div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
 </div>

 <div class="actions">
  <%= f.submit 'Create Book' %>
 </div>

</form>
<% end %>
